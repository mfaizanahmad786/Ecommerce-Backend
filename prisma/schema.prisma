generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())  // Fixed: was @uuid()
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  address   String?
  phone     String?
  orders    Order[]   // One user has many orders
  cart      Cart?     // One user has one cart
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String      @id @default(uuid())
  name        String      @unique
  description String?
  price       Float
  stock       Int         @default(0)
  images      String[]
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])  // Many products to one category
  cartItems   CartItem[]  // Product can be in many carts
  orderItems  OrderItem[] // Product can be in many orders
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  products  Product[] // One category has many products
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique              // Unique for 1:1 relation
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[] // One cart has many items
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])  // One product per cart (no duplicates)
}

model Order {
  id              String      @id @default(uuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items           OrderItem[] // One order has many items
  total           Float
  status          OrderStatus @default(PENDING)
  shippingAddress String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float    // Store price at time of order
  createdAt DateTime @default(now())
}